<% provide(:title, 'New Message') %>
<h1>New Message</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@message) do |f| %>
      <%= render 'users/error_messages' %>

      <%= f.label :subject %>
      <%= f.text_field :subject %>

      <%= f.label :body %>
      <%= f.text_field :body %>

      <%= f.label :recepient_id %>
      <%= f.text_field :recepient_id %>

      <%= f.submit "Send Message", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
