<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Send a Message" %>

    <%= #hidden_field_tag :user_id, @house.user_id %>

  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>