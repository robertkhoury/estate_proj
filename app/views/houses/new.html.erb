<% provide(:title, 'List House') %>
<h1>List House</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@house) do |f| %>
      <%= render 'houses/error_messages' %>

      <div class="cloudinary-fileupload">
      <%= f.label "Carrierwave upload" %>
      <%= f.hidden_field :picture_cache %>
      <%= f.file_field :picture %> 
      </div>

      <%= f.label :listing_type %>
      <%= f.select :listing_type, options_for_select(%w[Rent Buy]) %> 

      <%= f.label "Attachinary upload" %>
      <%= attachinary_file_field_tag 'house[photos]', @house, :photos, :multiple => true %>
    

      <%= f.label :status %>
      <%= f.select :status, options_for_select(["Please, buy my home.", "Seeing what's out there.", "Make me an offer!"]) %>
      
      <%= f.label :street_address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>
      
      <%= f.label :state %>
      <%= f.select :state, options_for_select(%w[ AL AK AZ AR CA CO CT DE FL GA HI ID IL IN IA KS KY LA ME MD MA MI MN MS MO MT NE NV NH NJ NM NY NC ND OH OK OR PA RI SC SD TN TX UT VT VA WA WV WI WY], selected: 'CA') %>

      <%= f.label :zip %>
      <%= f.number_field :zip, max: 99999 %>

      <%= f.label :county %>
      <%= f.text_field :county %>

      <%= f.label :year_built %>
      <%= f.number_field :year_built %>

      <%= f.label :beds %>
      <%= f.number_field(:beds, in: 0.0..9.0, step: 0.5) %> 

	<%= f.label :baths %>
      <%= f.number_field(:baths, in: 0.0..9.0, step: 0.25) %> 

      <%= f.label :price %>
      <%= f.number_field :price %>


      <%= f.label :square_footage %>
      <%= f.text_field :square_footage, :placeholder => 'e.g. 8,500 sqft' %>

      <%= f.label :lot_size %>
      <%= f.text_field :lot_size, :placeholder => 'e.g. 1.5 acres' %>

      <%= f.label :floors %>
      <%= f.select :floors, (1..5) %>

      <%= f.label :house_type %>
	    <%= f.select :house_type, options_for_select(%w[Single-Family Duplex Triplex Condo Townhouse Land Other]) %> 

	<%= f.label :flooring %>
	<%= f.select :flooring, options_for_select(%w[Carpet Hardwood Laminate Tile]) %> 

	<%= f.label :fireplaces %>
      <%= f.select :fireplaces, (0..9) %>

	<%= f.label :heating_type %>
	<%= f.select :heating_type, options_for_select(%w[None Central]) %>

      <%= f.label :air_conditioning %>
	<%= f.select :air_conditioning, options_for_select(%w[None Central]) %>

      <%= f.label :garage %>
      <%= f.select :garage, options_for_select(%w[None Attached Separate]) %>

      <%= f.label :basement %>
      <%= f.select :basement, options_for_select(%w[No Yes]) %>

      <%= f.label :attic %>
      <%= f.select :attic, options_for_select(%w[No Yes]) %>  

      <%= f.label :parking %>
      <%= f.text_field :parking %>

	<%= f.label :appliances %>
      <%= f.text_field :appliances %>

	<%= f.label :owner_description %>
      <%= f.text_field :description %>

      <br><br>
      <%= f.submit "Post Listing", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>

</div>

<script src="assets/multiple-image.js"></script>

