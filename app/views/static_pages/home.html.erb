<div class="home_signin">
  <% if signed_in? %>
	  <%= link_to "Post New Listing", listhouse_path, class: "btn btn-large btn-primary" %> 
  <% else %>
  	<%= link_to "Sign up now to list your home", signup_path, class: "btn btn-large btn-primary" %> 
  <br>
  <br>
  or <%= link_to "Sign In", signin_path %> if you already have an account
  <% end %>
</div>
